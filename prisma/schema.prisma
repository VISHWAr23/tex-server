
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  WORKER
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  HALF_DAY
  LEAVE
}

enum ExpenseType {
  COMPANY
  HOME
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  password  String
  name      String
  role      Role        @default(WORKER)
  works     Work[]
  attendance Attendance[]
  createdAt DateTime    @default(now())
}

model Attendance {
  id        Int               @id @default(autoincrement())
  date      DateTime          // Normalized to start of day
  status    AttendanceStatus  @default(PRESENT) // Auto-set based on work records
  work      Work?             @relation(fields: [workId], references: [id], onDelete: SetNull)
  workId    Int?              @unique
  user      User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  @@unique([date, userId]) // One attendance record per user per day
  @@index([userId])
  @@index([date])
}

model WorkDescription {
  id    Int    @id @default(autoincrement())
  text  String @unique
  works Work[]

  @@index([text])
}

model Work {
  id                   Int               @id @default(autoincrement())
  date                 DateTime          // Stored as date only (normalized to start of day)
  quantity             Int               // Units produced/completed
  pricePerUnit         Float             // Price per unit of work
  totalAmount          Float             // quantity * pricePerUnit
  description          WorkDescription   @relation(fields: [descriptionId], references: [id], onDelete: Restrict)
  descriptionId        Int
  user                 User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId               Int
  attendance           Attendance?
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt

  @@unique([date, userId]) // One entry per user per day
  @@index([userId])
  @@index([date])
}

model Material {
  id           Int      @id @default(autoincrement())
  name         String
  supplier     String
  quantity     Int
  cost         Float
  dateReceived DateTime @default(now())
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  quantity  Int
  startDate DateTime
  endDate   DateTime?
  client    String
  revenue   Float?
}

model Expense {
  id       Int         @id @default(autoincrement())
  type     ExpenseType
  category String
  amount   Float
  date     DateTime    @default(now())
  note     String?
}