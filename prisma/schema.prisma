
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  WORKER
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  HALF_DAY
  LEAVE
}

enum ExpenseType {
  COMPANY
  HOME
}

model User {
  id              Int              @id @default(autoincrement())
  email           String           @unique
  password        String
  name            String
  role            Role             @default(WORKER)
  monthlySalary   Float?           // Monthly salary for workers
  works           Work[]
  attendance      Attendance[]
  salaryPayments  SalaryPayment[]
  createdAt       DateTime         @default(now())
}

model Attendance {
  id        Int               @id @default(autoincrement())
  date      DateTime          // Normalized to start of day
  status    AttendanceStatus  @default(PRESENT) // Auto-set based on work records
  work      Work?             @relation(fields: [workId], references: [id], onDelete: SetNull)
  workId    Int?              @unique
  user      User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  @@unique([date, userId]) // One attendance record per user per day
  @@index([userId])
  @@index([date])
}

model Company {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  exports     Export[]
  createdAt   DateTime @default(now())

  @@index([name])
}

model Export {
  id                   Int               @id @default(autoincrement())
  date                 DateTime          // Export date (normalized to start of day)
  company              Company           @relation(fields: [companyId], references: [id], onDelete: Restrict)
  companyId            Int
  quantity             Int               // Units exported
  pricePerUnit         Float             // Price per unit
  totalAmount          Float             // quantity * pricePerUnit
  description          WorkDescription   @relation(fields: [descriptionId], references: [id], onDelete: Restrict)
  descriptionId        Int
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt

  @@index([companyId])
  @@index([date])
  @@index([date, companyId])
}

model WorkDescription {
  id           Int      @id @default(autoincrement())
  text         String   @unique
  pricePerUnit Float?   // Optional default price per unit
  works        Work[]
  exports      Export[]

  @@index([text])
}

model Work {
  id                   Int               @id @default(autoincrement())
  date                 DateTime          // Stored as date only (normalized to start of day)
  quantity             Int               // Units produced/completed
  pricePerUnit         Float             // Price per unit of work
  totalAmount          Float             // quantity * pricePerUnit
  description          WorkDescription   @relation(fields: [descriptionId], references: [id], onDelete: Restrict)
  descriptionId        Int
  user                 User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId               Int
  attendance           Attendance?
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt

  @@index([userId])
  @@index([date])
  @@index([date, userId])
}

model Material {
  id           Int      @id @default(autoincrement())
  name         String
  supplier     String
  quantity     Int
  cost         Float
  dateReceived DateTime @default(now())
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  quantity  Int
  startDate DateTime
  endDate   DateTime?
  client    String
  revenue   Float?
}

model Expense {
  id       Int         @id @default(autoincrement())
  type     ExpenseType
  category String
  amount   Float
  date     DateTime    @default(now())
  note     String?
}

model SalaryPayment {
  id        Int      @id @default(autoincrement())
  amount    Float    // Amount paid
  date      DateTime @default(now())
  note      String?  // Optional note about the payment
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([date])
}